
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Match any file path
    match /{allPaths=**} {
        // Allow reads and writes if the user is authenticated
        allow read, write: if request.auth != null;
    }

    // A more secure rule that only allows users to write to their own directory.
    // This is a common pattern for user-generated content.
    match /patients/{userId}/{allPaths=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /doctors/{userId}/{allPaths=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /medicine_stores/{userId}/{allPaths=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
